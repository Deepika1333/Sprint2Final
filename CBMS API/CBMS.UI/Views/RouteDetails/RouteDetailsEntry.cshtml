@{
}

<form method="post" enctype="multipart/form-data">

    <div class="h2">
        ROUTE DETAILS ENTRY
    </div>
    <div class="form-group">
        <label>Source</label>
        <input type="text" asp-for="source" class="form-control" placeholder="enter source " required />
    </div>
    <div class="form-group">
        <label>Destination</label>
        <input type="text" asp-for="destination" class="form-control" placeholder="enter destination" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div> }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>}
</form>

<div>
    <a asp-controller="RouteDetails" asp-action="RouteDetails">View  List</a>
</div>


